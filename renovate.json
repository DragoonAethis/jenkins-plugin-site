{
    "extends": [
        "config:base",
        "schedule:monthly"
    ],
    "labels": [
        "dependencies"
    ],
    "npm": {
        "stabilityDays": 1
    },
    "regexManagers": [
        {
            "fileMatch": ["Jenkinsfile_k8s"],
            "matchStrings": ["image: \"jenkinsciinfra/builder:(?<currentValue>.*?)\"\n"],
            "depNameTemplate": "jenkinsciinfra/builder",
            "datasourceTemplate": "docker"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "jenkinsciinfra/builder"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "major": {
                "enabled": true
            },
            "separateMultipleMajor": true,
            "allowedVersions": "^14 || ^16 || ^18 || ^20"
        },
        {
            "extends": "monorepo:remark",
            "enabled": false
        },
        {
            "matchPackageNames": [
                "p-queue",
                "husky",
                "rehype",
                "rehype-stringify",
                "unist-util-visit-parents",
                "unist-util-visit",
                "reactstrap"
            ],
            "enabled": false
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        }
    ]
}
